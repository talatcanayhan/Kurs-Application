@model IEnumerable<Kurs>

    <h2>Kurs Listesi</h2>
    <hr>
    <a href="/Kurs/create" class="btn btn-sm btn-primary">Kurs Ekle</a>
    <table class="table">
        <thead>
            <tr>
                <th style="width:150px;">@Html.DisplayNameFor(m=>m.KursId)</th>
                <th>@Html.DisplayNameFor(m=>m.Baslik)</th>
                <th>@Html.DisplayNameFor(m=>m.Ogretmen.Ad)</th>
                <th style="width:150px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.KursId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Baslik)</td>
                    <td>@Html.DisplayFor(modelItem => item.Ogretmen.Ad)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.KursId" class="btn btn-sm btn-danger">Detaylar</a>
                        <a asp-action="Delete" asp-route-id="@item.KursId" class="btn btn-sm btn-danger">Sil</a>
                    </td> 
                </tr>
            }
        </tbody>
    </table>